@model IEnumerable<ManageAccommodation.Models.RoomModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    Pager pager = new Pager();

    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<h1>Rooms Overview</h1>

<p>
    @if (User.IsInRole("KeyUser") || User.IsInRole("Admin")){
        <a asp-action="Create">Create New Room</a>
    }
</p>
<partial name="_pager" model="@pager" />

<table class="table">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["VacancySortParm"]">@Html.DisplayNameFor(model => model.Status)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Iddorm)*@
                Dorm Name
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Iddorm)*@
                Room No
            </th>
            <th>
               @* @Html.DisplayNameFor(model => model.PricePerSt)*@
               Price/Student
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.Idroom)
            </td>*@
            <td>
                    <img src="images/room.jpg" alt="" class="avatar">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DormName)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomNo)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerSt)
            </td>
            <td>
   @*             @Html.ActionLink("Edit", "Edit", new {  id=item.Idroom  }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Idroom }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Idroom }) @*|
                    @Html.ActionLink("Place Student", "PlaceStudent", new { id=item.Idroom })*@
                    <div class="btn-group">
                        <a asp-action="Details" asp-route-id="@item.Idroom" class="btn btn-sm btn-primary ml-1">Details</a>
                        @if (User.IsInRole("KeyUser") || User.IsInRole("Admin")) {
                            <a asp-action="Edit" asp-route-id="@item.Idroom" class="btn btn-sm btn-info">Edit</a>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Delete" asp-route-id="@item.Idroom" class="btn btn-sm btn-danger  ml-1">Delete</a>
                        }
                    </div>
            </td>
        </tr>
}
    </tbody>
</table>
