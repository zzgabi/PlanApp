    <tbody>
@foreach (var item in Model) {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.Idroom)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OccupiedNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VacanciesNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DormName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerSt)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Idroom  }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Idroom }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Idroom }) @*|
