@model ManageAccommodation.Models.RoomModel

@{
    ViewData["Title"] = "EditRoom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Room</h1>

<h4>Form:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                
                <input asp-for="Idroom" class="form-control" hidden />
                
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="OccupiedNo" class="control-label"></label>*@
                Occupied No
                <input asp-for="OccupiedNo" class="form-control" />
                <span asp-validation-for="OccupiedNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="VacanciesNo" class="control-label"></label>*@
                Vacancy No
                <input asp-for="VacanciesNo" class="form-control" />
                <span asp-validation-for="VacanciesNo" class="text-danger"></span>
            </div>
            <div class="form-group">
               @* <label asp-for="Iddorm" class="control-label"></label>*@
                Dorm Name
                @Html.DropDownList("Iddorm", new SelectList(@ViewBag.DormList, "Value", "Text"), "Select Dorm", new {@class = "form-control"})
                <span asp-validation-for="Iddorm" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="PricePerSt" class="control-label"></label>*@
                Price/Student
                <input asp-for="PricePerSt" class="form-control" />
                <span asp-validation-for="PricePerSt" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Room Overview</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
