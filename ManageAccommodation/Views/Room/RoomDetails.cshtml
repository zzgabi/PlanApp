@model ManageAccommodation.Models.RoomModel 
@{
    ViewData["Title"] = "RoomDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Room Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Room No:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomNo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.OccupiedNo)*@
            Occupied No
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OccupiedNo)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.VacanciesNo)*@
            Vacancy No
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VacanciesNo)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Iddorm)*@
            Dorm Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DormName)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.PricePerSt)*@
            Price/Student
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PricePerSt)
        </dd>
        <dt class="col-sm-2">
           Students:
        </dt>
        @foreach (var stud in (IEnumerable<StudentModel>)ViewData["StudsAssign"]){
            <tr>
                <td>@stud.StudentName</td>  | Amount due:  
                <td>@stud.Debt</td> (Lei)
                <br/>
            </tr>
            }

      
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Idroom }) |
    <a asp-action="Index">Back to Rooms List</a>
</div>
